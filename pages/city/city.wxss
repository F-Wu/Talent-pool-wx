/* pages/city/city.wxss */
.city_box {
  height: 100vh;
  background: #fff;
  display: flex;
  position: absolute;
}

.city_left {
  position: relative;
  flex: 1;
  width: 100vw;
  overflow: hidden auto;
}

/* 字母 */
.index {
  background-color: rgba(255, 255, 255, 0.89);
  /* position: absolute; */
  /* right: 0; */
  border-right: 1px solid #ccc;
  color: #45CFFE;
  font-size: 32rpx;
}

.SV_categoryTitle {
  width: 180rpx;
  height: 100vh;
  float: left;
  border-left: 1px solid #ccc;
  
}

.categoryName {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #3E3E3E;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.categoryNameActive {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #45CFFE;
  border-left: 4rpx solid #45CFFE;
  background-color: rgba(224, 224, 224, 0.5);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scroll-Y {
  width: 500rpx !important;
  float: left;
  margin-left: 200rpx;
}

.active {
  border-color: #45CFFE;
  color: #45CFFE;
}

.city_locate,
.national {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}

.city_locate_title {
  color: #999;
  margin-right: 20rpx;
}
