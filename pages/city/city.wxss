.new_city {
  background: #efefef;
  font-size: 28rpx;
}

.new_city_title {
  line-height: 50rpx;
  color: #999;
  padding-left: 25rpx;
  margin-bottom: 20rpx;
}

.new_city_box {
  display: flex;
  flex-wrap: wrap;
}

.new_city_text {
  width: 200rpx;
  text-align: center;
  line-height: 70rpx;
  background: #fff;
  border-radius: 35rpx;
  margin: 0 0 22rpx 22rpx;
}

.city_first_letter {
  line-height: 40rpx;
  height: 40rpx;
  padding-left: 25rpx;
  font-size: 28rpx;
  background: #eee;
  color: #999;
}

.city_name {
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}

/* 左边 */
.section {
  margin-bottom: 19rpx;
}

.city-title {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 28rpx;
}

.letter {
  width: 44rpx;
  height: 44rpx;
  color: #fff;
  border-radius: 100%;
  background-color: #45CFFE;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.city-list {
  display: flex;
  flex-wrap: wrap;
 margin-left: 20rpx;
}

.city-item, .city_locate_text {
  width: 190rpx;
  height: 55rpx;
  margin-right: 30rpx;
  margin-bottom: 28rpx;
  line-height: 55rpx;
  text-align: center;
  border: 1px solid #dcdcdc;
  border-radius: 6rpx;
  color: #545454;
  font-size: 28rpx;
}
.city_locate_text{
  position: absolute;
  display: inline-block;
  background-color: #33B9FF;
  right: 0rpx;
}
