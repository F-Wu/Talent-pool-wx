  /* background-color: #45CFFE; */
  position: relative;
  z-index: 10;
  display: flex;
}

.search view {
  /* bottom: 100px; */
  height: 35rpx;
  position: relative;
  bottom: -30px;
  z-index: 11;
  left: 15px;
}

.search .input {
  position: absolute;
